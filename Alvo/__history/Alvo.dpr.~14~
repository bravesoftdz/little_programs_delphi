program Alvo;

{$APPTYPE CONSOLE}

{$R *.res}

uses
 Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
 Vcl.Controls, Vcl.Forms, Vcl.Dialogs;
var
diametroAtual,diametro6,diametro5,diametro4:Double;
//Raio6,Raio5,Raio4,Raio3,Raio2,Raio1, :Double;
diametro3,diametro2,diametro1,Pi,ccm :Double;
circ6,circ5,circ4,circ3,circ2,circ1,circTotal,Alvo1,AlvoTotal :Double;


begin
  Pi:=3.14;
  Writeln('Informar o Diâmetro do Circulo Maior em Centímetros');
  Readln(diametroAtual);
  diametro6:= diametroAtual;

  circ6 :=  diametro6 * Pi*2;

  diametro5:= (diametroAtual*(1-(20/100)));
  circ5 :=  diametro5 * Pi*2;

  diametro4:= (diametroAtual*(1-(30/100)));
  circ4 :=  diametro4 * Pi*2;

  diametro3:= (diametroAtual*(1-(40/100)));
  circ3 :=  diametro3 * Pi*2;

  diametro2:= (diametroAtual*(1-(50/100)));
  circ2 :=  diametro2 * Pi*2;

  diametro1:= (diametroAtual*(1-(60/100)));
  circ1 :=  diametro1 * Pi*2;

  circTotal :=(circ6+circ5+circ4+circ3+circ2+circ1);
  Alvo1 := circTotal;
  AlvoTotal := circTotal * 5000;

  Writeln(circ6:4:2);
   Writeln(circ5:4:2);
    Writeln(circ4:4:2);
     Writeln(circ3:4:2);
      Writeln(circ2:4:2);
       Writeln(circ1:4:2);
   Writeln('Papelão necessário para um alvo: ', Alvo1:4:2 , ' cm2');
   Writeln('Papelão necessário para 5000 alvoa: ', AlvoTotal:4:2 , ' cm2');



  Readln;
   Readln;


end.
