program Escrever_numero_por_extenso;
// Escrever número por extenso de 0 a 10.000

uses
  Winapi.Windows,
  Winapi.Messages,
  System.SysUtils,
  System.Variants,
  System.Classes,
  Vcl.Graphics,
  Vcl.Controls,
  Vcl.Forms,
  Vcl.Dialogs;

var
Num, u, d, c, m, I: Integer;
TamNum : Integer;
NumString : string;

begin
  write('Iforme um número de 0 a 10.000: ');
  Readln(Num);
  NumString := inttostr(Num);
  TamNum := Length (NumString);

  for I := 1 to TamNum do
  begin
    Inc(m);
    Inc(c);
    Inc(d);
    Inc(u);
  end;

  write (m);
  write(c);
  write(d);
  write(u);

  Readln;
  Readln;



end.
