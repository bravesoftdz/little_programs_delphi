program Decimal_para_Binario;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var
decimal : string;
y,d : Integer;

begin
write('Informe o número Decimal!: ');
read (y);
d := y;

while y > 0 do
 if (y mod 2) = 0 then
 begin
 decimal := '0'+decimal;
 y := y div 2;
 end
 else
 decimal := '1'+decimal;
 y := y div 2;

write('A representação binária de', d, ' é ', decimal);



end.




