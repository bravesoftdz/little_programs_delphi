program Decimal_para_Binario;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var
x : Char;
resto : string;
y ,d : Integer;

begin
write('Informe o número Decimal!: ');
read (y);
d := y;

while y > 0 do
  begin
    if (y mod 2) = 0 then
    begin
    x := '0'+y;
    end
    else
    x := '1'+y;
    y := y / 2;
  end;

  write('A representação binária de', d, ' é ', x);

end.

 {var
    decimal,x,resto:integer;
    binario,strresto,strquociente:string;
  Begin
    write ('Digite o valor decimal ');
    read (decimal);
    x:=decimal;
    while (x>=2) do
      begin
        resto:=x mod 2;
        //str(resto,strquociente);
        binario:=strquociente+binario;
        x:=x div 2;
      end;
    str(x,strquociente);
    binario:=strquociente+binario;
    writeln ('O valor decimal ',decimal,' em binário é ',binario);
  End. }




